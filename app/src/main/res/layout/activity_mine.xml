<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ch_info">

        <ImageView
            android:id="@+id/ch_icon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            app:srcCompat="@drawable/coach" />

        <TextView
            android:id="@+id/ch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ch_icon"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="用户名" />

        <TextView
            android:id="@+id/ch_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ch_icon"
            android:layout_below="@id/ch_name"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="手机号" />


    </RelativeLayout>

    <Button
        android:id="@+id/favor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_info"
        android:text="我的收藏" />
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="退出登录" />



</RelativeLayout>